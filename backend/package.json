    "cheerio": "^1.2.0",
    "drizzle-orm": "^0.38.0",
    "fastify": "^4.28.1",
    "graphql": "^16.9.0",
    "node-cron": "^3.0.3",
    "postgres": "^3.4.5",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.35",
    "@types/node": "^25.0.8",
    "@types/node-cron": "^3.0.11",
    "drizzle-kit": "^0.30.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  }
